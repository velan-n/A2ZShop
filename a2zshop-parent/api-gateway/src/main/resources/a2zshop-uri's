product-info-service:
    POST:
         http://localhost:8765/add-category
         http://localhost:8765/category/{categoryId}/add-sub-category
         http://localhost:8765/sub-category/{subCategoryId}/add-product

    GET:
         http://localhost:8765/categories
         http://localhost:8765/category/{categoryId}
         http://localhost:8765/category/{categoryId}/sub-categories
         http://localhost:8765/sub-category/{subCategoryId}
         http://localhost:8765/sub-category/{subCategoryId}/products
         http://localhost:8765/products
         http://localhost:8765/product/{id}

    DELETE:
         http://localhost:8765/delete-product/{id}

